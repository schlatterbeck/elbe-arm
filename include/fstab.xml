<fstab>
  <bylabel>
    <label>rootfs</label>
    <mountpoint>/</mountpoint>
    <fs>
      <type>ext4</type>
      <tune2fs>-i 0</tune2fs>
    </fs>
  </bylabel>
  <bylabel>
    <label>boot</label>
    <mountpoint>/boot</mountpoint>
    <fs>
      <type>vfat</type>
    </fs>
  </bylabel>
  <bydev>
    <source>sysfs</source>
    <mountpoint>/sys</mountpoint>
    <fs>
      <type>sysfs</type>
    </fs>
    <options>rw,nosuid,nodev,noexec,relatime</options>
  </bydev>
  <bydev>
    <source>devpts</source>
    <mountpoint>/dev/pts</mountpoint>
    <fs>
      <type>devpts</type>
    </fs>
    <options>rw,nosuid,noexec,relatime,mode=620</options>
  </bydev>
  <bydev>
    <source>proc</source>
    <mountpoint>/proc</mountpoint>
    <fs>
      <type>proc</type>
    </fs>
  </bydev>
  <bydev>
    <source>tmpfs</source>
    <mountpoint>/tmp</mountpoint>
    <fs>
      <type>tmpfs</type>
    </fs>
    <options>size=4m</options>
  </bydev>
  <bydev>
    <source>tmpfs</source>
    <mountpoint>/var/log</mountpoint>
    <fs>
      <type>tmpfs</type>
    </fs>
    <options>size=2m</options>
  </bydev>
</fstab>
